{
  "builds": [
    {
      "src": "nuxt.config.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "api/**/*": {
      "memory": 1024, // Adjust memory for serverless functions (optional)
      "maxDuration": 10 // Max duration in seconds for serverless functions (optional)
    }
  }
}
